
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Category";
    var categories = ViewData["Category"] as List<Category>;
    var cars = ViewData["Cars"] as List<Car>;
}

@model List<Customer.Models.Cars>

<section class="conten-product">
        <div class="content-product-list">

            <div class="product-1">
                <h3 style="color: white;margin-top: 40px;text-align: center;">Category</h3>
            </div>
            <div class="content-category">
                <h2 style="color: rgb(0, 0, 0);text-align: center;border-bottom: 2px solid rgb(241, 93, 199);"><b>Category</b></h2>
                <div class="car-brand-cate">
                    @foreach(var item in categories){
                        <div class="parentCate">
                        <a href="/customer/category/@item.Id">
                            <b>@item.Carbrand</b>
                        </a>
                    </div>
                    
                 
                    }
                   
                </div>
                
            </div>
            <div class="product-show" style="flex-direction:column">
                <div class="container">
                    <div class="row">
                         @foreach(var item in cars){
                    <div class="col-4">
                        <a href="/customer/details/@item.FrameId">
                        <div class="col1-item1">
                            <img src="~/image/@item.Imageurl" alt="">
                        </div>
                        <div class="col1-item1-content">
                            <p>@item.CarName</p>
                        </div>
                        </a>
                    </div>
                }
                    </div>
                
                    
              
            </div>

          
            </div>
         
        </div>
</section>

